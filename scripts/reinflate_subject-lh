pushd $SUBJECTS_DIR/$1/
touch NOTES
echo " " >> NOTES
echo $0 $* >> NOTES
whoami >> NOTES
date >> NOTES
hostname >> NOTES
popd

pushd $SUBJECTS_DIR/$1/scripts
mris_smooth ../surf/lh.orig ../surf/lh.smoothwm
mris_inflate  ../surf/lh.smoothwm ../surf/lh.inflated
popd
